<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="Theme.Duelingo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
                <item name="colorPrimary">@color/blue_primary</item>
                <item name="colorPrimaryVariant">@color/blue_primary</item>
                <item name="colorOnPrimary">@color/white</item>
                <item name="colorSecondary">@color/blue_primary</item>
                <item name="colorSecondaryVariant">@color/blue_primary</item>
                <item name="colorOnSecondary">@color/black</item>
                <item name="android:statusBarColor">?attr/backgroundColor</item>
                <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

                <!-- Пользовательские атрибуты темы -->
                <item name="backgroundColor">@color/background_light</item>
                <item name="textColor">@color/text_color_light</item>
                <item name="secondaryTextColor">@color/secondary_text_light</item>
                <item name="cardBackgroundColor">@color/white</item>
                <item name="dividerColor">@color/gray_light</item>
        </style>

        <style name="Theme.Duelingo.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
                <item name="colorPrimary">@color/blue_primary</item>
                <item name="colorPrimaryVariant">@color/blue_primary</item>
                <item name="colorOnPrimary">@color/black</item>
                <item name="colorSecondary">@color/blue_primary</item>
                <item name="colorSecondaryVariant">@color/blue_primary</item>
                <item name="colorOnSecondary">@color/black</item>
                <item name="android:statusBarColor">@color/background_dark</item>
                <item name="android:windowLightStatusBar">false</item>

                <!-- Пользовательские атрибуты темы -->
                <item name="backgroundColor">@color/background_dark</item>
                <item name="textColor">@color/text_color_dark</item>
                <item name="secondaryTextColor">@color/secondary_text_dark</item>
        </style>

        <style name="Theme.Duelingo.Achievements" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
                <item name="android:textColorPrimary">#FFFFFF</item>
                <item name="android:textColorSecondary">#CCCCCC</item>
                <item name="colorAccent">#4CAF50</item>
        </style>

</resources>